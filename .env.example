# FantasyBlock Environment Variables
# Copy this file to .env.local and fill in your actual values

# === REQUIRED VARIABLES ===
# Database connection string (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/fantasyblock"

# Better Auth secret key (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-super-secret-key-here"

# Public app URL 
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Autumn payment provider secret key
AUTUMN_SECRET_KEY="your-autumn-secret-key"

# === OPTIONAL VARIABLES ===
# Payment provider (Stripe)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email provider (Resend)
RESEND_API_KEY="re_..."

# AI Providers (for enhanced features)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
GOOGLE_GENERATIVE_AI_API_KEY="..."
PERPLEXITY_API_KEY="pplx-..."

# Web scraping (Firecrawl)
FIRECRAWL_API_KEY="fc-..."

# Google Sheets Integration
# To get your Sheet ID: Open your Google Sheet, look at the URL
# https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID_HERE/edit
NEXT_PUBLIC_GOOGLE_SHEET_ID="your-google-sheet-id-here"

# Environment
NODE_ENV="development"